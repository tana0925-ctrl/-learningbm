{
  "name": "webapp",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "wrangler pages dev",
    "deploy": "npm run build && wrangler pages deploy dist --project-name learningbm",
    "cf-typegen": "wrangler types --env-interface CloudflareBindings",
    "dev:sandbox": "wrangler pages dev dist --d1=learningbm-production --local --ip 0.0.0.0 --port 3000",
    "dev:d1": "wrangler pages dev dist --d1=learningbm-production --local --ip 0.0.0.0 --port 3000",
    "db:migrate:local": "wrangler d1 migrations apply learningbm-production --local",
    "db:migrate:prod": "wrangler d1 migrations apply learningbm-production"
  },
  "dependencies": {
    "hono": "^4.12.2"
  },
  "devDependencies": {
    "@hono/vite-build": "^1.2.0",
    "@hono/vite-dev-server": "^0.18.2",
    "vite": "^6.3.5",
    "wrangler": "^4.4.0"
  }
}
